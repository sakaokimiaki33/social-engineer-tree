.header
  .header__bar.row
    %h1.grid-6
      %a{:href => "/tweets"} 投稿一覧
    .user_nav.grid-6
      %a.post{:href => "/tweets/new"} 投稿する
  = yield
.edit
  .container
    = form_with(model: @tweet, local: true) do |form|
      %h3
        編集する
      = form.text_field :image, placeholder: "Image Url"
      = form.text_area :text, placeholder: "text" , rows: "10"
      = form.submit "更新する"
= render "footer" 
